<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?actionBarSize</item>
        <item name="android:background">?colorPrimary</item>
        <item name="android:theme">@style/AppTheme.ActionBarOverlay</item>
        <item name="popupTheme">@style/AppTheme.PopupOverlay</item>
    </style>

    <style name="ListContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/grid_2x</item>
        <item name="android:paddingRight">@dimen/grid_2x</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="Text.Title" parent="TextAppearance.AppCompat.Title" />

    <style name="Text.Subheading" parent="TextAppearance.AppCompat.Subhead" />

    <style name="Text.Body1" parent="TextAppearance.AppCompat.Body1" />

</resources>
